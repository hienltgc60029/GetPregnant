<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/samlung"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

   <ImageView 
         android:id="@+id/img"
         android:layout_marginTop="2dp"
         android:layout_gravity="center_vertical"
        android:layout_width="@dimen/AVARTA_WIDTH"
        android:layout_height="@dimen/AVARTA_HEIGHT"
        android:scaleType="fitXY"
        android:contentDescription="@null"
       />

    <RelativeLayout
        android:id="@+id/listContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/AVARTA_HEIGHT"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp" >

       <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/btn"
            android:layout_marginTop="0dp"
            android:background="@null"
            android:gravity="top|left"
            android:lineSpacingExtra="-5px"
            android:includeFontPadding="false"
            android:paddingTop="0dp"
            android:text="Lieblingsplatz"
            android:textColor="#fffab2"
            android:textSize="21dp"
            android:alpha="0.5" />
<FrameLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            
            android:layout_alignRight="@+id/btn"
            android:layout_below="@+id/txtTitle"
            android:gravity="top" >

        <TextView
            android:id="@+id/txtDec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:lines="4"
            android:text="Blindtext elitis endiatiu sincil lue molest Uciam ipita int."
            android:textColor="#fffab2"
            android:textSize="12dp" />
       
</FrameLayout>

        <Button
            android:id="@+id/btn_los"
            android:layout_width="@dimen/ROW_BTN_LOS_WIDTH"
            android:layout_height="@dimen/ROW_BTN_HEIGHT"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_loschen" />

        <Button
            android:id="@+id/btn_up"
            android:layout_width="@dimen/ROW_BTN_UP_WIDTH"
            android:layout_height="@dimen/ROW_BTN_HEIGHT"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/btn_los"
            android:background="@drawable/btn_up" />

        <Button
            android:id="@+id/btn_down"
            android:layout_width="@dimen/ROW_BTN_DOWN_WIDTH"
            android:layout_height="@dimen/ROW_BTN_HEIGHT"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/btn_up"
            android:background="@drawable/btn_down" />
    </RelativeLayout>

</LinearLayout>
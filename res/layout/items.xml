<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/AVARTA_WIDTH"
        android:layout_height="@dimen/AVARTA_HEIGHT"
        android:layout_gravity="center_vertical"
       
        android:scaleType="fitXY"
        android:contentDescription="@null"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:id="@+id/listContent"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="@dimen/AVARTA_HEIGHT"
        android:layout_marginLeft="@dimen/MarginLeft" >

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/btn"
            android:layout_marginTop="0dp"
            android:background="@null"
            android:gravity="top|left"
            android:includeFontPadding="false"
            android:paddingTop="0dp"
            android:text="Lieblingsplatz"
            
            android:textSize="20sp"
            android:alpha="0.5" />

        <TextView
            android:id="@+id/txtDec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/btn"
            android:layout_below="@+id/txtTitle"
            android:gravity="top"
            android:lines="2"
            android:alpha="0.5"
            android:text="Blindtext elitis endiatiu sincil lue molest Uciam ipita int." />

        <Button
            android:id="@+id/btnView"
            android:layout_width="@dimen/ROW_BUTTON_WIDTH"
            android:layout_height="@dimen/ROW_BUTTON_HEIGHT"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" />
        <Button
            android:id="@+id/btn"
            android:layout_width="@dimen/ROW_BUTTON_WIDTH"
            android:layout_height="@dimen/ROW_BUTTON_HEIGHT"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/MarginLeft"
            android:layout_toRightOf="@id/btnView" />
    </RelativeLayout>

</LinearLayout>